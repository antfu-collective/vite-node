{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedDeclarations": true,
    "declaration": true,
    "composite": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist"]
}
