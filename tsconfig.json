{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "vite-node": ["./src/index.ts"],
      "vite-node/package.json": ["./package.json"],
      "vite-node/*": ["./src/*"]
    },
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
