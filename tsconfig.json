{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true,
    "paths": {
      "vite-node": ["./src/index.ts"],
      "vite-node/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist"]
}
